<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 상태가 눌렸을 때의 배경 색상 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- 눌렸을 때 색상 -->
        </shape>
    </item>
    <!-- 기본 상태의 배경 색상 -->
    <item>
        <shape>
            <solid android:color="@color/white" /> <!-- 기본 색상 -->
        </shape>
    </item>
</selector>
