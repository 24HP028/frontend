<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PortPilot" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:fontFamily">@font/apple_m</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- white status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="SocialButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/social_container</item>
        <item name="android:gravity">center</item>
        <!-- 추가적인 스타일 속성들을 여기에 추가할 수 있습니다 -->
    </style>

    <style name="CustomErrorTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="errorTextColor">@android:color/holo_red_light</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="myInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/gray</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="android:textCursorDrawable">@color/deep_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="Theme.PortPilot" parent="Base.Theme.PortPilot" >

    </style>
</resources>